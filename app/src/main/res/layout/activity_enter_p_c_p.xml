                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e13"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="17dp"
                    android:textColor="#181D55"
                    android:hint=" TPH  " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="ID Fan Motor Loading"
                    android:textStyle="italic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e14"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="13dp"
                    android:textColor="#181D55"
                    android:hint=" amps  " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Wind Box Pressure"
                    android:textStyle="italic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e15"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="13dp"
                    android:textColor="#181D55"
                    android:hint=" mWC  " />




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Furnace Temperature"
                    android:textStyle="italic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e16"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="13dp"
                    android:textColor="#181D55"
                    android:hint=" C  " />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
