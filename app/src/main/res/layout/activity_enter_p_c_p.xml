                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Steam Pressure of Boiler Outlet"
                    android:textStyle="italic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/e9"
                    android:textColor="#181D55"
                    android:hint=" KG/CM^2 " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Steam Temperature at Boiler Outlet "
                    android:textStyle="italic"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e10"
                    android:background="@drawable/inputbg"
                    android:padding="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="17dp"
                    android:textColor="#181D55"
                    android:hint=" C  " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Fixed Water Inlet Temperature"
                    android:textStyle="italic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e11"
                    android:background="@drawable/inputbg"
