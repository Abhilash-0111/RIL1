                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e5"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="17dp"
                    android:textColor="#181D55"
                    android:hint=" TPH " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="D/A level"
                    android:textStyle="italic"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="17dp"
                    android:id="@+id/e6"
                    android:textColor="#181D55"
                    android:hint=" % " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Hot Well Level"
                    android:textStyle="italic"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e7"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#181D55"
                    android:hint=" % " />
