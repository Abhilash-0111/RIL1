<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg4"
    android:layout_height="match_parent"
    tools:context=".EnterPCP">

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AA00FF"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#fff"
                android:text="Plant Critical Parameter"
                android:textSize="19sp"
                android:layout_marginBottom="13dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="Boiler Steamflow "
                    android:textStyle="italic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e1"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#181D55"
                    android:hint=" TPH " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:text="Boiler Feed Waterflow"
                    android:textStyle="italic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e2"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#181D55"
                    android:hint=" TPH " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Turbine Load"
                    android:textStyle="italic"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e3"
                    android:padding="8dp"
                    android:background="@drawable/inputbg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="17dp"
                    android:textColor="#181D55"
                    android:hint=" MW  " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Turbin exhout presuure"
                    android:textStyle="italic"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e4"
                    android:background="@drawable/inputbg"
                    android:padding="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="17dp"
                    android:textColor="#181D55"
                    android:hint="Enter Moisture " />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Coal flow"
                    android:textStyle="italic"/>
